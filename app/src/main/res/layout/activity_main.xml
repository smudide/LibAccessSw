<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <TableRow>

        <ImageView
            android:padding="3dip"
            android:layout_height="75dp"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:scaleType="fitXY"
            android:src="@drawable/dflogo"/>
        <TextView
            android:text=" Natural Fragrances to Inspire a Natural love of Reading"
            android:gravity="center|bottom"
            android:textStyle="bold"
            android:padding="3dip"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.6"/>
    </TableRow>
    <TableRow
        android:layout_weight="1">
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.3">

            <TableRow
                android:layout_weight="1">
                <Button
                    android:text="Search"
                    android:padding="3dip"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:layout_gravity="center"
                    android:id="@+id/MASearchBtnId"/>
            </TableRow>

            <TableRow
                android:layout_weight="1">
                <Button
                    android:text="Check Out"
                    android:padding="3dip"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:layout_gravity="center"
                    android:id="@+id/MACheckOutBtnId"/>
            </TableRow>

            <TableRow
                android:layout_weight="1">
                <Button
                    android:text="Check In"
                    android:padding="3dip"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:layout_gravity="center"
                    android:id="@+id/MACheckInBtnId"/>
            </TableRow>

            <TableRow
                android:layout_weight="1">
                <Button
                    android:text="Add A Book"
                    android:padding="3dip"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:layout_gravity="center"
                    android:id="@+id/MAAddABookBtnId"/>
            </TableRow>
            <TableRow
                android:layout_weight="1">
                <Button
                    android:text="List All Books"
                    android:padding="3dip"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:layout_gravity="center"
                    android:id="@+id/MAListAllBooksBtnId"/>
            </TableRow>

            <TableRow
                android:layout_weight="1">
                <Button
                    android:text="Contact Us"
                    android:padding="3dip"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:layout_gravity="center"
                    android:id="@+id/MAContactUsBtnId"/>
            </TableRow>

        </TableLayout>
        <ImageView
            android:padding="3dip"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:scaleType="fitXY"
            android:src="@drawable/dflogo"/>
    </TableRow>

    <TableRow>

        <Space
            android:padding="3dip"
            android:layout_height="50dp"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_gravity="center"/>
        <TextView
            android:text="Library Access Software\nDesigned and Developed\nBy\nShiva Mudide\n\n\u00a9 2016 Dongari. All rights reserved."
            android:gravity="center|top"
            android:padding="3dip"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.6"/>
    </TableRow>

</TableLayout>